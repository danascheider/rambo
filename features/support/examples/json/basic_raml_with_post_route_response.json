{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "schema for a list of authors",
  "type": "object",
  "properties": {
    "author": {
      "type": "object",
      "properties": {
        "id": { "type": "integer" },
        "first_name": { "type": "string" },
        "last_name": { "type": "string" }
      }
    }
  }
}
