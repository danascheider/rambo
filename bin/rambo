#!/usr/bin/env ruby

require 'fileutils'

raise "USAGE: rambo [FILE]" unless filename = ARGV[0]
raise "Unsupported file format. Please choose a RAML file." unless filename =~ /\.raml$/

basename = filename.gsub(/\.raml$/, '')

FileUtils.mkdir_p "spec/contract"
FileUtils.touch "spec/contract/#{basename}_spec.rb"