#%RAML 1.0
---
title: e-BookMobile API
baseUri: http://api.e-bookmobile.com/{version}
version: v1
securitySchemes:
  auth_header:
    describedBy:
      headers:
        Api-Token:
          type: string
securedBy: [auth_header]

/authors:
  get:
    description: Retrieve a list of authors
    responses:
      200:
        body:
          application/json:
            example: |
              {
                "data": [
                  {
                    "id": 1,
                    "first_name": "Hermann",
                    "last_name": "Hesse"
                  },
                  {
                    "id":2,
                    "first_name": "Charles",
                    "last_name": "Dickens"
                  }
                ],
                "success": true,
                "status": 200
              }
/genres:
  get:
    description: Retrieve a list of available genres
    responses:
      200:
        body:
          application/json:
            example: |
              {
                "genres": [
                  {
                    "id": 1,
                    "description": "Science fiction"
                  },
                  {
                    "id": 2,
                    "description": "Young adult"
                  },
                  {
                    "id": 3,
                    "description": "Romance"
                  }
                ],
                "success": true,
                "status": 200
              }
